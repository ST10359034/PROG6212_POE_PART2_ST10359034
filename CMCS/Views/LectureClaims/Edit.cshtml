@model CMCS.Models.LectureClaim

@{
    ViewData["Title"] = "Edit Lecture Claim";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your layout file
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-dark p-4 rounded-top">
            <h1 class="text-center text-info">Update Lecture Claim</h1>
            <form method="post" asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

                <div class="form-group">
                    <label asp-for="LecturerName" class="control-label"></label>
                    <input type="text" asp-for="LecturerName" placeholder="Enter lecturer's name" class="form-control" />
                    <span asp-validation-for="LecturerName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LecturerSurname" class="control-label"></label>
                    <input type="text" asp-for="LecturerSurname" placeholder="Enter lecturer's surname" class="form-control" />
                    <span asp-validation-for="LecturerSurname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LecturerEmail" class="control-label"></label>
                    <input type="email" asp-for="LecturerEmail" placeholder="Enter lecturer's email" class="form-control" />
                    <span asp-validation-for="LecturerEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ClaimDate" class="control-label"></label>
                    <input asp-for="ClaimDate" type="date" class="form-control" />
                    <span asp-validation-for="ClaimDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="HoursWorked" class="control-label"></label>
                    <input type="number" asp-for="HoursWorked" placeholder="Enter hours worked" class="form-control" />
                    <span asp-validation-for="HoursWorked" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="HourlyRate" class="control-label"></label>
                    <input type="number" asp-for="HourlyRate" placeholder="Enter hourly rate" class="form-control" />
                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-8">
                        <label asp-for="ClaimDocument" class="control-label"></label>
                        <input type="file" class="form-control" asp-for="ClaimDocument" id="ChooseImg" />
                    </div>
                    <div class="col-4">
                        <img src="@Url.Content("~/wwwroot/SupportingDocument/Document" + Model.ClaimDocument)" style="width:100px;height:100px; border:1px solid red; border-radius:10px; padding:10px;" alt="Lecture Claim image" id="PrevImg" />
                    </div>
                </div>

                <div class="form-group m-4">
                    <input type="submit" class="btn btn-group-sm btn-primary float-right" value="Update" />
                </div>
                <a class="btn btn-sm btn-warning p-2 m-2" asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/laptop.js"></script> <!-- Include your JS if needed for image preview -->
}
